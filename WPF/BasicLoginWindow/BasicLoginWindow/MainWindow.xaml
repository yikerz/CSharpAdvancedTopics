<Window x:Class="BasicLoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicLoginWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label FontSize="12">Username</Label>
        <TextBox Name="tbUsername" Height="20" />
        <Label FontSize="12">Password</Label>
        <PasswordBox Height="20" MaxLength="8" PasswordChar="*" />
        <Button Margin="0,10,0,0"
                Click="Button_Click">Login</Button>
    </StackPanel>
</Window>
